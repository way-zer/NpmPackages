{
  "include": [
    "*.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "vite.config.ts"
  ],
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "lib": [
      "esnext", "dom"
    ],
    "emitDeclarationOnly": true,
    "declaration": true,
    "skipLibCheck": true
  }
}